<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.java_project.enrollment.enrollmentformController"
            style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe);">
   <children>
      <!-- Title -->
      <Label layoutX="200.0" layoutY="20.0" text="Customer Enrollment"
             style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 3, 0.5, 1, 1);" />

      <!-- Name -->
      <Label layoutX="50.0" layoutY="70.0" text="Name:"
             style="-fx-text-fill: white; -fx-font-size: 14px;" />
      <TextField fx:id="txtenrName" layoutX="150.0" layoutY="65.0" prefWidth="200.0"
                 style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #00f2fe;" />
      <Button fx:id="btnFetch" layoutX="370.0" layoutY="65.0" mnemonicParsing="false" onAction="#doFetch" text="Fetch"
              style="-fx-background-color: #0066cc; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" />

      <!-- Mobile -->
      <Label layoutX="50.0" layoutY="115.0" text="Mobile No.:"
             style="-fx-text-fill: white; -fx-font-size: 14px;" />
      <TextField fx:id="txtenrMob" layoutX="150.0" layoutY="110.0" prefWidth="350.0"
                 style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #00f2fe;" />

      <!-- Address -->
      <Label layoutX="50.0" layoutY="160.0" text="Address:"
             style="-fx-text-fill: white; -fx-font-size: 14px;" />
      <TextField fx:id="txtenrAddress" layoutX="150.0" layoutY="155.0" prefWidth="350.0"
                 style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #00f2fe;" />

      <!-- City -->
      <Label layoutX="50.0" layoutY="205.0" text="City:"
             style="-fx-text-fill: white; -fx-font-size: 14px;" />
      <TextField fx:id="txtenrCity" layoutX="150.0" layoutY="200.0" prefWidth="200.0"
                 style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #00f2fe;" />

      <!-- Gender -->
      <Label layoutX="50.0" layoutY="250.0" text="Gender:"
             style="-fx-text-fill: white; -fx-font-size: 14px;" />
      <ComboBox fx:id="enrGender" layoutX="150.0" layoutY="245.0" prefWidth="150.0"
                style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #00f2fe;" />

      <!-- DOB -->
      <Label layoutX="320.0" layoutY="250.0" text="DOB:"
             style="-fx-text-fill: white; -fx-font-size: 14px;" />
      <DatePicker fx:id="enrDob" layoutX="370.0" layoutY="245.0" prefWidth="130.0"
                  style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #00f2fe;" />

      <!-- Buttons -->
      <Button fx:id="btnEnroll" layoutX="100.0" layoutY="350.0" mnemonicParsing="false" onAction="#CEdoEnroll" text="Enroll Now"
              style="-fx-background-color: #0066cc; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" />
      <Button fx:id="btnenrEdit" layoutX="230.0" layoutY="350.0" mnemonicParsing="false" onAction="#CEdoEdit" text="Edit Data"
              style="-fx-background-color: #0066cc; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" />
      <Button fx:id="btnenrClear" layoutX="360.0" layoutY="350.0" mnemonicParsing="false" onAction="#CEdoClear" text="Clear All"
              style="-fx-background-color: #0066cc; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" />
   </children>
</AnchorPane>
